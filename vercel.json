{
  "routes": [
    {
      "src": "/(.*)\\.js$",
      "headers": {
        "content-type": "application/javascript; charset=utf-8",
        "content-disposition": "inline",
        "access-control-allow-origin": "*"
      }
    },
    {
      "src": "/(.*)\\.css$",
      "headers": {
        "content-type": "text/css; charset=utf-8",
        "content-disposition": "inline",
        "access-control-allow-origin": "*"
      }
    },
    {
      "src": "/((?!\\.(?:js|css)$).*)",
      "dest": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
} 